# ============================
#  LOGGING
# ============================
LOG_LEVEL=INFO

# ============================
#  POSTGRESQL
# ============================
# Preferred configuration (username/password separated)
POSTGRES_URL=jdbc:postgresql://<postgres_host>:5432/<postgres_db>
POSTGRES_USER=<postgres_user>
POSTGRES_PASSWORD=<postgres_password>
POSTGRES_POOL_SIZE=5
POSTGRES_CONNECTION_TIMEOUT_MS=30000

# ============================
#  RABBITMQ
# ============================
# Preferred configuration (used by the app)
RABBITMQ_URI=amqp://<rabbitmq_user>:<rabbitmq_password>@<rabbitmq_host>:<rabbitmq_port>/<rabbitmq_vhost>
# Comma-separated list of queues to subscribe to
RABBITMQ_QUEUES=incidents
# Legacy single queue name (used if RABBITMQ_QUEUES is not set)
# RABBITMQ_QUEUE=incidents
RABBITMQ_QUEUE_DURABLE=true
